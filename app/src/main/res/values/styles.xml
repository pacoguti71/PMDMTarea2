<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema global de la aplicación. Hereda de un tema que no tiene ActionBar y se aplica como tema para que todas las actividades carezcan de ella -->
    <style name="Tema" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color del tema -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Colores del texto -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <!-- Elevación para dar profundidad a ciertos elementos. No lo vamos a usar -->
        <item name="android:elevation">4dp</item>
        <!-- Configuraciones de views siquisieramos que todas las vitas tuvieran el mismo estilo-->
        <item name="buttonStyle">@style/BotonEstilo</item>
        <!-- Fuente global del tema -->
        <item name="android:fontFamily">@font/supermario</item>
    </style>

    <!-- Estilo de un botón personalizado y reutilizable en toda la aplicación -->
    <style name="BotonEstilo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Estilo de un TextView personalizado y reutilizable en toda la aplicación -->
    <style name="nombrePersonaje">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="detallesPersonaje">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/maquinaescribir</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilo para un EditText personalizado y reutilizable en toda la aplicación -->
    <style name="EditTextEstilo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo para un LinearLayout personalizado y reutilizable en toda la aplicación -->
    <style name="LinearLayoutEstilo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Estilo para un ImageView personalizado y reutilizable en toda la aplicación -->
    <style name="ImageViewEstilo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <!-- Estilo para un TextInputLayout (Material Design) -->
    <style name="TextInputLayoutEstilo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

</resources>


